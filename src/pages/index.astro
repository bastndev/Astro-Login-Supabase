---
import { Button } from "../components/Button";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <Header />
  <div class="container flex flex-col justify-center items-center">
    <section class="section flex">
      <img class="w-24" src="/favicon.svg" alt="" />
      <p>+</p>
      <img class="w-24" src="/images/react.svg" alt="" />
      <p>+</p>
      <img class="w-24" src="/images/supabase.png" alt="" />
    </section>
    <div class="button">
      <Button text="Get Start" />
    </div>
  </div>
</Layout>

<style>
  .container {
    height: 80vh;
  }
  .section {
    align-items: center;
    margin-left: 2rem;
  }
  .button {
    margin-left: 2rem;
  }
  img {
    margin: 15px;
  }
</style>
